
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>


<a class="btn btn-info" asp-action="Add">Add New Role</a>
@*<a class="btn btn-info" asp-action="AssignRole">Assign Roles</a>*@


<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Role</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td><a class="btn btn-info" asp-action="Edit" asp-route-id="@role.Id">
                        <span class="icon">
                            <i class="fas fa-edit"></i>
                        </span>       
                </a></td>
                @*<td>
                    <form method="post" asp-action="Delete" asp-route-id="@role.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>*@
            </tr>
        }
    </tbody>
</table>

