
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>


<a class="btn btn-info" asp-action="Add">
    <span class="icon">
        <i class="fas fa-plus-circle"></i>
    </span>New Role
</a>

<table class="table-sm table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <div class="dropdown show">
                        <a class="btn btn-outline-primary" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Settings
                            <span class="icon">
                                <i class="fas fa-cogs"></i>
                            </span>
                        </a>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@role.Id">
                                <span>
                                    <i class="fas fa-edit"></i>
                                </span>
                                Edit
                            </a>
                            <a class="dropdown-item" asp-action="ManageUsers" asp-route-id="@role.Id">
                                <span>
                                    <i class="fas fa-user-tag"></i>
                                </span>
                                Manage Users
                            </a>
                            <form method="post" asp-action="Delete" asp-route-id="@role.Id">
                                <button type="submit" class="btn">
                                    <span class="icon">
                                        <i class="fas fa-trash-alt"></i>
                                    </span>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

