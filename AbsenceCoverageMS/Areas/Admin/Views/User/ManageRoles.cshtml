
@model List<UserManageRolesViewModel>

@{
    ViewData["Title"] = "ManageRoles";
}


    <h3 class="display-4">Manage Roles </h3>
    <div class="card">
        <h5 class="card-header">@ViewBag.UserName </h5>

        <div class="card-body">

            <form method="post" asp-action="ManageRoles">

                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="custom-control custom-checkbox">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input class="custom-control-input" asp-for="@Model[i].Checked" />
                        <label class="custom-control-label" asp-for="@Model[i].Checked">@Model[i].RoleName</label>
                    </div>
                }

                <button type="submit" class="btn btn-success">Save</button>
                <a class="btn btn-danger" asp-action="List">Cancel</a>

            </form>
        </div>
    </div>


