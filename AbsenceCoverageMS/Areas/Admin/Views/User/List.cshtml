
@model IEnumerable<User>


@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<a class="btn btn-info" asp-action="Add">
    <span class="icon">
        <i class="fas fa-plus-circle"></i>
    </span>New User
</a>

<table class="table-sm table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            @*<th>role</th>*@
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var user in Model)
        {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            @*<td>@user.RoleNames.First()</td>*@
            <td>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@user.Id">
                    Details
                    <span class="icon">
                        <i class="fas fa-binoculars"></i>
                    </span>
                </a>
            </td>
            <td>
                <form method="post" asp-action="Delete" asp-route-id="@user.Id">
                    <button type="submit" class="btn btn-danger">
                        Delete
                        <span class="icon">
                            <i class="fas fa-trash"></i>
                        </span>
                    </button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>

