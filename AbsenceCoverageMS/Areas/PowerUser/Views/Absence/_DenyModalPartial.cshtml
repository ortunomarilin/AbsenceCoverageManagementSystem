
@model AbsenceRequest


@*<div class="text-right">*@
    <button class="btn btn-danger  btn-sm  btn-block" data-toggle="modal" data-target="#Deny@(Model.AbsenceRequestId)">
        <span class="mr-2">
            <i class="fas fa-thumbs-down"></i>
        </span>
        Deny
    </button>
@*</div>*@


<form method="post" asp-action="Deny">

    <input type="hidden" asp-for="@Model.AbsenceRequestId" />

    <div class="modal  " tabindex="-1" role="dialog" id="Deny@(Model.AbsenceRequestId)">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header  form-section-header ">

                    <h5 class="modal-title  p-2">Deny Absence Request</h5>

                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-12">
                            <label class="form-label  ">New Status </label>
                            <label class="form-control  bg-light ">Deny </label>
                        </div>
                    </div>

                    <div class="row  mt-3 ">
                        <div class="col-md-12">
                            <label class="form-label ">Status Remarks (Mandatory) </label>
                            <input class="form-control" asp-for="@Model.StatusRemarks" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">
                        <span class="mr-2">
                            <i class="fas fa-thumbs-down"></i>
                        </span>
                        Deny
                    </button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>
