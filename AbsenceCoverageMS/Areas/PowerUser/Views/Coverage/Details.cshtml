
@model CoverageDetailsViewModel


@{
    ViewData["Title"] = "Details";
}


<partial name="_TempDataAlertPartial" />

<div class="view-header  mb-1">
    <h5>Coverage Request</h5>
</div>

<div class="row  justify-content-end">
    <div class="col-md-3">
        <a class="btn btn-link  btn-block  "  asp-action="List" >
            Return to Manage Coverage
        </a>
    </div>
</div>


<div class="row justify-content-center">
    <div class="col-md-11  form-section  shadow-sm   pb-5 ">

        <div class="form-row form-section-header ">
            <div class=" col-md-12  ">
                <h6>Coverage Details </h6>
            </div>
        </div>

        <div class="form-row  ml-5  mr-5  mt-4  border-bottom ">
            <div class="col-md-12">
                <h5 class="form-label font-weight-normal ">Absence Details</h5>
            </div>

        </div>

        <div class="form-row  ml-5  mr-5  border-bottom  ">
            <div class=" col-md-2   ">
                <label class=" font-weight-bold ">Absence Request ID # : </label>
            </div>
            <div class=" col-md-6  ">
                <label>@Model.AbsenceRequest.AbsenceRequestId</label>
            </div>
        </div>


        <div class="form-row  ml-5  mr-5   border-bottom ">
            <div class=" col-md-2   ">
                <label class="font-weight-bold ">Teacher</label>
            </div>
            <div class=" col-md-6  ">
                <label>@Model.AbsenceRequest.User.FullName</label>
            </div>
        </div>


        <div class="form-row ml-5  mr-5  border-bottom ">
            <div class=" col-md-2    ">
                <label class="font-weight-bold ">Title</label>
            </div>
            <div class=" col-md-3  ">
                <label>@Model.AbsenceRequest.User.PositionTitle</label>
            </div>
        </div>


        <div class="form-row  ml-5  mr-5  border-bottom ">
            <div class=" col-md-2    ">
                <label class="font-weight-bold">Date</label>
            </div>
            <div class=" col-md-3 ">
                @*<label>@(Model.AbsenceRequest.StartDate != Model.AbsenceRequest.EndDate ? Model.AbsenceRequest.DateRange : Model.AbsenceRequest.StartDate.Value.ToShortDateString())</label>*@
            </div>
        </div>


        <div class="form-row  ml-5  mr-5  border-bottom ">
            <div class=" col-md-2    ">
                <label class="font-weight-bold">Time</label>
            </div>
            <div class=" col-md-3  ">
                @*<label>@Model.AbsenceRequest.TimeRange</label>*@
            </div>
        </div>


        <div class="form-row  ml-5  mr-5  border-bottom  ">
            <div class="col-md-2    ">
                <label class="font-weight-bold">Duration</label>
            </div>
            <div class=" col-md-3">
                <label>@Model.AbsenceRequest.DurationType.Name</label>
            </div>
        </div>


        <div class="form-row  ml-5  mr-5  border-bottom ">
            <div class=" col-md-2   ">
                <label class="font-weight-bold">Need Coverage</label>
            </div>
            <div class=" col-md-3  ">
                <label>@(Model.AbsenceRequest.NeedCoverage == true ? "Yes" : "No")  </label>
            </div>
        </div>

        <div class="form-row  ml-5  mr-5  mb-5  border-bottom ">
            <div class="col-md-2    ">
                <label class="  font-weight-bold">Periods</label>
            </div>
            <div class=" col-md-3">
                <label>@Model.GetPeriodsNeedCoverage()</label>
            </div>
        </div>







        <div class="form-row  ml-5  mr-5 mt-4  ">
            <div class="col-md-12">
                <h5 class="form-label  border-bottom   font-weight-normal ">Sub Job Details</h5>
            </div>
        </div>


        @if (Model.AbsenceRequest.SubJob == null)
        {

            <div class="form-row mt-1  justify-content-between   mb-5">

                <div class="col-md-4">
                    <h6 class=" font-weight-normal  ml-5 ">None at the moment</h6>
                </div>

                <div class="col-md-2  ml-5 ">
                    <form asp-action="AddSubJob" asp-route-id="@Model.AbsenceRequest.AbsenceRequestId">
                        <button class="btn btn-primary btn-sm" type="submit">
                            <span class="mr-2">
                                <i class="fas fa-chalkboard"></i>
                            </span>
                            Add Sub Job
                        </button>
                    </form>
                </div>
            </div>


        }
        else
        {
            <div class="table-container ml-5  mr-5  mb-5  mt-3 ">
                <table class="table  table-sm  ml-2  mr-2  ">
                    <thead class=" ">
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Duration</th>
                            <th>Periods</th>
                            <th>Accepted By Sub</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @*<td>@(Model.AbsenceRequest.StartDate != Model.AbsenceRequest.EndDate ? Model.AbsenceRequest.DateRange : Model.AbsenceRequest.StartDate.Value.ToShortDateString())</td>*@
                            @*<td>@Model.AbsenceRequest.TimeRange</td>*@
                            <td>@Model.AbsenceRequest.DurationType.Name</td>
                            <td>@Model.GetPeriodsNeedCoverage()</td>
                            <td>@Model.AbsenceRequest.SubJob.User?.FullName</td>
                            <td>@Model.AbsenceRequest.SubJob.CoverageStatusType.Name</td>
                            <td>
                                <form method="post" asp-action="DeleteSubJob" asp-route-id="@Model.AbsenceRequest.AbsenceRequestId">
                                    <button class="btn btn-danger btn-sm" type="submit">
                                        <span>
                                            <i class="fas fa-trash-alt"></i>
                                        </span>
                                    </button>
                                </form>

                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }





        <div class="form-row  ml-5  mt-4  ">
            <div class="col-md-12">
                <h5 class="form-label  border-bottom  font-weight-normal ">Coverage Job Details</h5>
            </div>
        </div>


        <div class="alert alert-danger  alert-dismissible " asp-validation-summary="All">
            <button class="close" data-dismiss="alert">&times;</button>
            <h6>
                <span>
                    <i class="fas fa-exclamation-triangle"></i>
                </span>
                Please correct the following.
            </h6>
        </div>


        <form method="post" asp-action="AddCoverageJob" >
            <div class="form-row    justify-content-end  mr-4  mt-4 ">

                <input type="hidden" asp-for="@Model.AbsenceRequest.AbsenceRequestId" />

                <div class="col-md-2">
                    <select class="form-control form-control-sm  mr-3" asp-for="@Model.Date"
                            asp-items="@(new SelectList(Model.Dates,
                                                Model.Date))">
                        <option value="">Select A Date</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <select id="PeriodId" class="form-control form-control-sm  mr-3" asp-for="@Model.PeriodId"
                            asp-items="@(new SelectList(Model.AbsenceRequest.AbsenceRequestPeriods,
                                                "PeriodId", "PeriodId", Model.PeriodId))">
                        <option value="">Select A Period</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <select id="TeacherId" class="form-control form-control-sm  mr-3" asp-for="@Model.UserId"
                            asp-items="@(new SelectList(string.Empty, "Id", "FullName", Model.UserId))">
                    </select>
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary  btn-sm  ">
                        <span class="mr-2">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </span>
                        Add Coverage Job
                    </button>
                </div>

            </div>
        </form>


        <div class="col-md-4   ">
            <h6 class=" font-weight-normal  ml-5 ">None at the moment</h6>
        </div>



        @*<div class="table-container ml-5  mr-5  mb-5  mt-4 ">
            <table class="table table-bordered table-sm  ">
                <thead class="">
                    <tr>
                        <th>Date</th>
                        <th>Period</th>
                        <th>Coverage Teacher</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CoverageJob job in Model.AbsenceRequest.CoverageJobs)
                    {
                        <tr>

                            <td>@job.Date</td>
                            <td>@job.PeriodId</td>
                            <td>@job.User.FullName</td>
                            <td>@job.CoverageStatusType.Name</td>
                            <td>
                                <form method="post" asp-action="DeleteCoverageJob" asp-route-id="@Model.AbsenceRequest.AbsenceRequestId">
                                    <button class="btn btn-danger btn-sm" type="submit">
                                        <span>
                                            <i class="fas fa-trash-alt"></i>
                                        </span>
                                    </button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>*@

    </div>
</div>



<script>

    $(function () {
        $("#PeriodId").change(function () {

            var url = '@Url.Content("~/PowerUser/")' + "Coverage/GetCoverageTeachers";

            $.getJSON(url, { PeriodId: $("#PeriodId").val() }, function (data)
            {
                var items = "";
                $("#TeacherId").empty();

                //console.log(data);
                $.each(data, function (i, row) {

                    //console.log(row);
                    items += "<option value='" + row.value +"'>"  + row.text + "</option>";
                });
                $("#TeacherId").html(items);
            })
        });
    });
    

</script>









