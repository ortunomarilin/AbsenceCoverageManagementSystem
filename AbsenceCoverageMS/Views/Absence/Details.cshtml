
@model AbsenceDetailsViewModel


@{
    ViewData["Title"] = "Absence Request Details";
}

<div class="view-header">
    <h3>Absence Request Details</h3>
</div>


<form method="post" asp-action="Delete" asp-route-id="@Model.AbsenceRequest.AbsenceRequestId">

    <div class="row justify-content-center">
        <div class="col-md-10  form-section  ">

            <div class="form-row border-0 ">
                <div class="form-group col-md-12 form-section-title ">
                    <h6>Absence Details </h6>
                </div>
            </div>


            <div class="form-row  ">
                <div class="form-group col-md-2">
                    <label class="form-label ">Absence Request #</label>
                </div>
                <div class="form-group col-md-6  ">
                    <label class="header-label">@Model.AbsenceRequest.AbsenceRequestId</label>
                </div>
            </div>


            <div class="form-row  ">
                <div class="form-group col-md-2">
                    <label class="form-label ">Absence Type</label>
                </div>
                <div class="form-group col-md-3  ">
                    <label class="header-label">@Model.AbsenceRequest.AbsenceType.Name</label>
                </div>
            </div>


            <div class="form-row ">
                <div class="form-group col-md-2  ">
                    <label class="form-label">Start Date</label>
                </div>
                <div class="form-group col-md-3 ">
                    <div class="input-group">
                        <label>@Model.AbsenceRequest.StartDate.Value.ToShortDateString()</label>
                    </div>
                </div>
            </div>


            <div class="form-row ">
                <div class="form-group col-md-2  ">
                    <label class="form-label">End Date</label>
                </div>
                <div class="form-group col-md-3 ">
                    <div class="input-group ">
                        <label>@Model.AbsenceRequest.EndDate.Value.ToShortDateString()</label>
                    </div>
                </div>
            </div>


            <div class="form-row ">
                <div class="col-md-2">
                    <label class="form-label">Duration</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@(Model.AbsenceRequest.Duration == Enums.Duration.FullDay ? "Full Day" : "Half Day")</label>

                </div>
            </div>


            <div class="form-row ">
                <div class="form-group col-md-2  ">
                    <label class="form-label">Start Time</label>
                </div>
                <div class="form-group col-md-3 ">
                    <div class="input-group">
                        <label>@Model.AbsenceRequest.StartTime.Value.ToShortTimeString()</label>
                    </div>
                </div>
            </div>


            <div class="form-row ">
                <div class="form-group col-md-2  ">
                    <label class="form-label">End Time</label>
                </div>
                <div class="form-group col-md-3 ">
                    <div class="input-group ">
                        <label>@Model.AbsenceRequest.EndTime.Value.ToShortTimeString()</label>
                    </div>
                </div>
            </div>


            <div class="form-row  ">
                <div class="col-md-2">
                    <label class="form-label">Need Coverage</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Model.AbsenceRequest.NeedCoverage</label>
                </div>
            </div>


            <div class="form-row border-0">
                <div class="col-md-2">
                    <label class="form-label">Periods</label>
                </div>
                <div class="form-group col-md-3">
                    <label>
                        @Model.GetPeriodsNeedCoverage()
                    </label>

                </div>
            </div>
        </div>
    </div>



    <div class="row justify-content-center">
        <div class="col-md-10  form-section  ">

            <div class="form-row border-0">
                <div class="form-group col-md-12 form-section-title ">
                    <h6>Submission Details </h6>
                </div>
            </div>


            <div class="form-row">
                <div class="col-md-2">
                    <label class="form-label">Submitted By</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Model.AbsenceRequest.User.FullName</label>
                </div>
            </div>


            <div class="form-row  border-0 ">
                <div class="col-md-2">
                    <label class="form-label">Date Submitted</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Model.AbsenceRequest.DateSubmitted.Value.ToShortDateString()</label>
                </div>
            </div>

        </div>
    </div>


    <div class="row justify-content-center">
        <div class="col-md-10  form-section  ">

            <div class="form-row  border-0 ">
                <div class="form-group col-md-12 form-section-title ">
                    <h6>Status Details </h6>
                </div>
            </div>


            <div class="form-row ">
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Model.AbsenceRequest.Status</label>
                </div>
            </div>


            <div class="form-row  border-0">
                <div class="col-md-2">
                    <label class="form-label">Date Processed</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@(Model.AbsenceRequest.DateProcessed.ToShortDateString() == "1/1/0001" ? "Waiting for Approval" : Model.AbsenceRequest.DateProcessed.ToShortDateString())</label>
                </div>
            </div>

        </div>
    </div>



    <div class="row justify-content-between">
        <div class="col-md-3">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.AbsenceRequest.AbsenceRequestId">Edit </a>
            <button type="submit" class="btn btn-danger ">Delete </button>
        </div>
        <div class="col-md-3 text-right">
            <a class="btn text-primary" asp-action="List">Return to Absent History </a>
        </div>
    </div>

</form>



